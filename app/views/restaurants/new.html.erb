<h1>New Restaurant</h1>
<%= form_with(model: @restaurant, local: true) do |form| %>
  <%= form.label :name %>
  <%= form.text_field :name %>

  <%= form.label :address %>
  <%= form.text_field :address %>

  <%= form.label :category %>
  <%= form.select :category, ["chinese", "italian", "japanese", "french", "belgian"] %>

  <%= form.submit "Create Restaurant", class: "btn btn-primary" %>
<% end %>
<%= link_to "Back to Restaurants", restaurants_path(@restaurant)  %>
